{
  "name": "server",
  "module": "src/index.ts",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun --minify",
    "start": "bun run dist/index.js",
    "db:generate": "bun x prisma generate",
    "db:migrate": "bun x prisma generate && bun x prisma migrate dev --name init",
    "db:reset": "bun x prisma migrate reset",
    "db:studio": "bun x prisma studio"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/express": "^5.0.6",
    "@types/morgan": "^1.9.10",
    "@types/node": "^25.0.3",
    "@types/nodemailer": "^7.0.4",
    "@types/pg": "^8.16.0",
    "dotenv": "^17.2.3",
    "prisma": "^7.2.0",
    "@types/dockerode": "^3.3.23"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "better-auth": "^1.4.10",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.9.1",
    "kafkajs": "^2.2.4",
    "morgan": "^1.10.1",
    "nodemailer": "^7.0.12",
    "pg": "^8.16.3",
    "socket.io": "^4.8.3",
    "winston": "^3.19.0",
    "zod": "^4.3.5",
    "dockerode": "^4.0.2",
    "socket.io-client": "^4.7.2"
  }
}
